<UserControl x:Class="BankingEcosystem.Admin.UI.Views.AddCustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="480" Margin="0,20">
        <Border Background="White" CornerRadius="10" Padding="0" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32">
                <StackPanel>
                    <TextBlock Text="Tambah Nasabah Baru" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,20" HorizontalAlignment="Center" />

                    <!-- Full Name -->
                    <TextBlock Text="Nama Lengkap *" FontSize="12" Foreground="{StaticResource SubtextBrush}" Margin="0,0,0,4" />
                    <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}" Margin="0,0,0,12" />

                    <!-- NIK -->
                    <TextBlock Text="NIK (16 digit) *" FontSize="12" Foreground="{StaticResource SubtextBrush}" Margin="0,0,0,4" />
                    <TextBox Text="{Binding Nik, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}" MaxLength="16" Margin="0,0,0,12" />

                    <!-- Phone -->
                    <TextBlock Text="No. Telepon *" FontSize="12" Foreground="{StaticResource SubtextBrush}" Margin="0,0,0,4" />
                    <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}" Margin="0,0,0,12" />

                    <!-- Email -->
                    <TextBlock Text="Email" FontSize="12" Foreground="{StaticResource SubtextBrush}" Margin="0,0,0,4" />
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}" Margin="0,0,0,12" />

                    <!-- Address -->
                    <TextBlock Text="Alamat" FontSize="12" Foreground="{StaticResource SubtextBrush}" Margin="0,0,0,4" />
                    <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}" Height="60"
                             AcceptsReturn="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" Margin="0,0,0,12" />

                    <!-- Date of Birth -->
                    <TextBlock Text="Tanggal Lahir" FontSize="12" Foreground="{StaticResource SubtextBrush}" Margin="0,0,0,4" />
                    <DatePicker SelectedDate="{Binding DateOfBirth}" Margin="0,0,0,16" Height="32" />

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#E74C3C" FontSize="12"
                               TextWrapping="Wrap" Margin="0,0,0,12"
                               Visibility="{Binding HasError, Converter={StaticResource BoolToVisConverter}}" />

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Batal" Command="{Binding CancelCommand}"
                                Height="40" Margin="0,0,8,0"
                                Background="#BDC3C7" Foreground="White" FontWeight="SemiBold"
                                BorderThickness="0" Cursor="Hand" />

                        <Button Grid.Column="1" Content="Simpan" Command="{Binding SaveCommand}"
                                Height="40" Margin="8,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                    <Setter Property="Content" Value="Simpan" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Setter Property="Content" Value="Menyimpan..." />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
