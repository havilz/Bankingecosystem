<Window x:Class="BankingEcosystem.Admin.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BankingEcosystem.Admin.UI.ViewModels"
        xmlns:views="clr-namespace:BankingEcosystem.Admin.UI.Views"
        mc:Ignorable="d"
        Title="Banking Ecosystem — Bank Office System" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- DataTemplates -->
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CustomerListViewModel}">
            <views:CustomerListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CustomerDetailViewModel}">
            <views:CustomerDetailView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AddCustomerViewModel}">
            <views:AddCustomerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AtmListViewModel}">
            <views:AtmListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AddAtmViewModel}">
            <views:AddAtmView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RefillAtmViewModel}">
            <views:RefillAtmView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TransactionListViewModel}">
            <views:TransactionListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AuditLogViewModel}">
            <views:AuditLogView/>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="{StaticResource LightGrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar (visible only when logged in) -->
        <Border Grid.Row="0" Background="{StaticResource CorporateBlueBrush}" Padding="20,10"
                Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="🏦 BANK OFFICE" Foreground="White" FontWeight="Bold" FontSize="18"
                               VerticalAlignment="Center" Margin="0,0,40,0"/>
                    <Button Content="Dashboard" Command="{Binding NavigateToDashboardCommand}" 
                            Style="{StaticResource NavBarButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Nasabah" Command="{Binding NavigateToCustomersCommand}" 
                            Style="{StaticResource NavBarButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="ATM" Command="{Binding NavigateToAtmsCommand}" 
                            Style="{StaticResource NavBarButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Transaksi" Command="{Binding NavigateToTransactionsCommand}" 
                            Style="{StaticResource NavBarButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Audit Log" Command="{Binding NavigateToAuditLogsCommand}" 
                            Style="{StaticResource NavBarButtonStyle}" Margin="0,0,10,0"/>
                    <!-- More nav buttons will be added in later steps -->
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Foreground="#CCFFFFFF" VerticalAlignment="Center" Margin="0,0,16,0" FontSize="13">
                        <Run Text="👤 "/>
                        <Run Text="{Binding EmployeeName}"/>
                    </TextBlock>
                    <Button Content="Logout" Command="{Binding LogoutCommand}"
                            Padding="12,6" Background="Transparent" Foreground="White"
                            BorderBrush="#55FFFFFF" BorderThickness="1" Cursor="Hand" FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>
