<Window x:Class="BankingEcosystem.Atm.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Banking Ecosystem ATM"
        Width="480" Height="640"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="{StaticResource DarkNavyBrush}">

    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Visibility="Collapsed" Background="#CC002855" d:Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Control Style="{StaticResource LoadingSpinnerStyle}" Margin="0,0,0,20"/>
                <TextBlock Text="Processing Transaction..." 
                           Foreground="{StaticResource GoldBrush}" 
                           FontSize="18" FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
