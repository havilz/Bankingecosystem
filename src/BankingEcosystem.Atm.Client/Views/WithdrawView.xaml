<Page x:Class="BankingEcosystem.Atm.UI.Views.WithdrawView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:BankingEcosystem.Atm.UI.ViewModels"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:WithdrawViewModel}"
      Title="Tarik Tunai"
      Background="{StaticResource DarkNavyBrush}"
      Focusable="True"
      KeyDown="OnKeyDown">

    <Page.Resources>
         <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header -->
            <RowDefinition Height="*" />    <!-- Content -->
            <RowDefinition Height="Auto" /> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Padding="32,16" Background="{StaticResource NavyBrush}">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="36" Height="36" Fill="{StaticResource GoldBrush}" Margin="0,0,12,0" />
                <TextBlock Text="Bank Ecosystem - Tarik Tunai"
                           FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource WhiteBrush}"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource PrimaryFont}" />
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1" Margin="40">
            
            <!-- Step 1: Select Amount -->
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="SelectAmount">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Pilih Jumlah Penarikan" 
                           FontSize="24" Foreground="{StaticResource WhiteBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,32"/>

                <Button Grid.Row="1" Grid.Column="0" Content="Rp 50.000" Command="{Binding SelectAmountCommand}" CommandParameter="50000"
                        Style="{StaticResource AtmPrimaryButtonStyle}" Margin="0,0,0,16"/>
                <Button Grid.Row="1" Grid.Column="2" Content="Rp 100.000" Command="{Binding SelectAmountCommand}" CommandParameter="100000"
                        Style="{StaticResource AtmPrimaryButtonStyle}" Margin="0,0,0,16"/>

                <Button Grid.Row="2" Grid.Column="0" Content="Rp 200.000" Command="{Binding SelectAmountCommand}" CommandParameter="200000"
                        Style="{StaticResource AtmPrimaryButtonStyle}" Margin="0,0,0,16"/>
                <Button Grid.Row="2" Grid.Column="2" Content="Rp 500.000" Command="{Binding SelectAmountCommand}" CommandParameter="500000"
                        Style="{StaticResource AtmPrimaryButtonStyle}" Margin="0,0,0,16"/>

                <Button Grid.Row="3" Grid.Column="0" Content="Rp 1.000.000" Command="{Binding SelectAmountCommand}" CommandParameter="1000000"
                        Style="{StaticResource AtmPrimaryButtonStyle}"/>
                <Button Grid.Row="3" Grid.Column="2" Content="Jumlah Lain" Command="{Binding OtherAmountCommand}"
                        Style="{StaticResource AtmSecondaryButtonStyle}"/>

            </Grid>

            <!-- Step 2: Custom Amount -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="CustomAmount">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock Text="Masukkan Jumlah Penarikan Lain" 
                           FontSize="24" Foreground="{StaticResource WhiteBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Border Background="White" CornerRadius="8" Padding="16,12" Width="400">
                    <TextBlock Text="{Binding CustomAmountDisplay}" 
                               FontSize="28" FontWeight="Bold" Foreground="{StaticResource DarkNavyBrush}"
                               HorizontalAlignment="Center"/>
                </Border>

                <TextBlock Text="Maksimal Rp 10.000.000. Kelipatan Rp 50.000" 
                           FontSize="14" Foreground="#80FFFFFF" 
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>

                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="14" Foreground="#FF5555" 
                           HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>

            <!-- Step 3: Processing -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="Processing">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock Text="Sedang Memproses Penarikan..." 
                           FontSize="24" Foreground="{StaticResource WhiteBrush}" 
                           HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" 
                             Width="200" Height="4" Margin="0,16"
                             Foreground="{StaticResource GoldBrush}"
                             Background="#20FFFFFF"
                             BorderThickness="0"/>
            </StackPanel>

            <!-- Step 4: Result -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="Result">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock Text="{Binding ResultTitle}" 
                           FontSize="28" FontWeight="Bold" Foreground="{StaticResource GoldBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <TextBlock Text="{Binding ResultMessage}" 
                           FontSize="18" Foreground="White" 
                           HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,40"/>

                <Button Content="Selesai" Command="{Binding EnterCommand}" Style="{StaticResource AtmPrimaryButtonStyle}" Width="150"/>
            </StackPanel>
            
        </Grid>

        <!-- Bottom Legend -->
        <Border Grid.Row="2" Padding="20" Background="#10FFFFFF">
             <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                 <TextBlock Text="[Keyboard] 0-9: Input | Backspace: Hapus | Enter: Lanjut | Esc: Batal / Kembali" 
                            Foreground="#60FFFFFF" FontSize="12"/>
             </StackPanel>
        </Border>
    </Grid>
</Page>
