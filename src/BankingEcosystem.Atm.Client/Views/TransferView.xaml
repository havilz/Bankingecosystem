<Page x:Class="BankingEcosystem.Atm.UI.Views.TransferView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:BankingEcosystem.Atm.UI.ViewModels"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:TransferViewModel}"
      Title="Transfer"
      Background="{StaticResource DarkNavyBrush}"
      Focusable="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header -->
            <RowDefinition Height="*" />    <!-- Content -->
            <RowDefinition Height="Auto" /> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Padding="32,16" Background="{StaticResource NavyBrush}">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="36" Height="36" Fill="{StaticResource GoldBrush}" Margin="0,0,12,0" />
                <TextBlock Text="Bank Ecosystem - Transfer"
                           FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource WhiteBrush}"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource PrimaryFont}" />
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1" Margin="40">
            
            <!-- Step 1: Input Account -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="InputAccount">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                
                <TextBlock Text="Masukkan Nomor Rekening Tujuan" 
                           FontSize="24" Foreground="{StaticResource WhiteBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <Border Background="White" CornerRadius="8" Padding="16,12" Width="400">
                    <TextBlock Text="{Binding TargetAccountNumber}" 
                               FontSize="28" FontWeight="Bold" Foreground="{StaticResource DarkNavyBrush}"
                               HorizontalAlignment="Center" Name="AccountTextDisplay"/>
                </Border>
                
                <TextBlock Text="Tekan ENTER untuk lanjut" 
                           FontSize="14" Foreground="#80FFFFFF" 
                           HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>

            <!-- Step 2: Input Amount -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="InputAmount">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock Text="Masukkan Jumlah Transfer" 
                           FontSize="24" Foreground="{StaticResource WhiteBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Border Background="White" CornerRadius="8" Padding="16,12" Width="400">
                    <TextBlock Text="{Binding AmountDisplay}" 
                               FontSize="28" FontWeight="Bold" Foreground="{StaticResource DarkNavyBrush}"
                               HorizontalAlignment="Center"/>
                </Border>

                <TextBlock Text="Maksimal Rp 100.000.000" 
                           FontSize="14" Foreground="#80FFFFFF" 
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>

                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="14" Foreground="#FF5555" 
                           HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>

            <!-- Step 3: Confirm -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="Confirm">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock Text="Konfirmasi Transfer" 
                           FontSize="28" FontWeight="Bold" Foreground="{StaticResource GoldBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,40"/>

                <Grid Width="500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tujuan:" FontSize="18" Foreground="#A0FFFFFF" Margin="0,0,20,10"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TargetAccountNumber}" FontSize="20" FontWeight="Bold" Foreground="White" TextAlignment="Right"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Jumlah:" FontSize="18" Foreground="#A0FFFFFF" Margin="0,0,20,10"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding AmountDisplay}" FontSize="20" FontWeight="Bold" Foreground="White" TextAlignment="Right"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
                    <Button Content="Batal" Command="{Binding CancelCommand}" Style="{StaticResource AtmSecondaryButtonStyle}" Width="120" Margin="0,0,20,0"/>
                    <Button Content="LANJUT" Command="{Binding EnterCommand}" Style="{StaticResource AtmPrimaryButtonStyle}" Width="120"/>
                </StackPanel>
            </StackPanel>

            <!-- Step 4: Processing -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="Processing">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock Text="Sedang Memproses..." 
                           FontSize="24" Foreground="{StaticResource WhiteBrush}" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="16" Foreground="#A0FFFFFF" 
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Step 5: Result -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="Result">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock Text="{Binding ResultTitle}" 
                           FontSize="28" FontWeight="Bold" Foreground="{StaticResource GoldBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <TextBlock Text="{Binding ResultMessage}" 
                           FontSize="18" Foreground="White" 
                           HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,40"/>

                <Button Content="Selesai" Command="{Binding EnterCommand}" Style="{StaticResource AtmPrimaryButtonStyle}" Width="150"/>
            </StackPanel>
            
        </Grid>

        <!-- Bottom Legend -->
        <Border Grid.Row="2" Padding="20" Background="#10FFFFFF">
             <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                 <TextBlock Text="[Keyboard] 0-9: Input | Backspace: Hapus | Enter: Lanjut | Esc: Batal" 
                            Foreground="#60FFFFFF" FontSize="12"/>
             </StackPanel>
        </Border>
    </Grid>
</Page>
