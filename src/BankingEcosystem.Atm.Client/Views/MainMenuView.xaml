<Page x:Class="BankingEcosystem.Atm.UI.Views.MainMenuView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Menu Utama"
      Background="{StaticResource DarkNavyBrush}"
      Focusable="True"
      KeyDown="OnKeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Padding="32,16" Background="{StaticResource NavyBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="36" Height="36" Fill="{StaticResource GoldBrush}" Margin="0,0,12,0" />
                    <TextBlock Text="Bank Ecosystem"
                               FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource WhiteBrush}"
                               VerticalAlignment="Center"
                               FontFamily="{StaticResource PrimaryFont}" />
                </StackPanel>

                <TextBlock x:Name="ClockText" Grid.Column="1"
                           FontSize="14" Foreground="#B0FFFFFF"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource MonoFont}" />
            </Grid>
        </Border>

        <!-- Welcome Section -->
        <Border Grid.Row="1" Padding="32,20" Background="#08FFFFFF">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="14" Foreground="#80FFFFFF"
                               FontFamily="{StaticResource PrimaryFont}">
                        Selamat datang,
                    </TextBlock>
                    <TextBlock x:Name="CustomerNameText"
                               FontSize="22" FontWeight="Bold"
                               Foreground="{StaticResource WhiteBrush}"
                               FontFamily="{StaticResource PrimaryFont}">
                        Nasabah Bank Ecosystem
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                    <TextBlock FontSize="11" Foreground="#60FFFFFF"
                               FontFamily="{StaticResource PrimaryFont}"
                               HorizontalAlignment="Right">
                        Saldo Tersedia
                    </TextBlock>
                    <TextBlock x:Name="BalanceText"
                               FontSize="24" FontWeight="Bold"
                               Foreground="{StaticResource GoldBrush}"
                               FontFamily="{StaticResource MonoFont}"
                               HorizontalAlignment="Right">
                        Rp ********
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Menu Grid -->
        <Grid Grid.Row="2" Margin="32,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Style="{StaticResource SubHeadingStyle}"
                       FontSize="14" Foreground="#70FFFFFF"
                       HorizontalAlignment="Left">
                Pilih Transaksi:
            </TextBlock>

            <!-- Menu Items -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="12" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="12" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Tarik Tunai -->
                <Button Grid.Row="0" Grid.Column="0"
                        Style="{StaticResource MenuItemButtonStyle}"
                        Click="OnWithdrawClick">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="&#x1F4B0;" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8" />
                        <TextBlock Text="Tarik Tunai" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource WhiteBrush}" HorizontalAlignment="Center" />
                        <TextBlock Text="Withdrawal" FontSize="11" Foreground="#60FFFFFF" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- Setor Tunai -->
                <Button Grid.Row="0" Grid.Column="2"
                        Style="{StaticResource MenuItemButtonStyle}"
                        Click="OnDepositClick">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="&#x1F4E5;" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8" />
                        <TextBlock Text="Setor Tunai" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource WhiteBrush}" HorizontalAlignment="Center" />
                        <TextBlock Text="Deposit" FontSize="11" Foreground="#60FFFFFF" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- Transfer -->
                <Button Grid.Row="2" Grid.Column="0"
                        Style="{StaticResource MenuItemButtonStyle}"
                        Click="OnTransferClick">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="&#x1F4E4;" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8" />
                        <TextBlock Text="Transfer" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource WhiteBrush}" HorizontalAlignment="Center" />
                        <TextBlock Text="Antar Rekening" FontSize="11" Foreground="#60FFFFFF" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- Cek Saldo -->
                <Button Grid.Row="2" Grid.Column="2"
                        Style="{StaticResource MenuItemButtonStyle}"
                        Click="OnBalanceClick">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="&#x1F4CA;" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8" />
                        <TextBlock Text="Cek Saldo" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource WhiteBrush}" HorizontalAlignment="Center" />
                        <TextBlock Text="Balance Inquiry" FontSize="11" Foreground="#60FFFFFF" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- Riwayat Transaksi -->
                <Button Grid.Row="4" Grid.Column="0"
                        Style="{StaticResource MenuItemButtonStyle}"
                        Click="OnHistoryClick">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="&#x1F4CB;" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8" />
                        <TextBlock Text="Riwayat" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource WhiteBrush}" HorizontalAlignment="Center" />
                        <TextBlock Text="Transaction History" FontSize="11" Foreground="#60FFFFFF" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- Ubah PIN -->
                <Button Grid.Row="4" Grid.Column="2"
                        Style="{StaticResource MenuItemButtonStyle}"
                        Click="OnChangePinClick">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="&#x1F510;" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8" />
                        <TextBlock Text="Ubah PIN" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource WhiteBrush}" HorizontalAlignment="Center" />
                        <TextBlock Text="Change PIN" FontSize="11" Foreground="#60FFFFFF" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <!-- Bottom Bar -->
        <Border Grid.Row="3" Padding="32,12" Background="#08FFFFFF">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock FontSize="11" Foreground="#50FFFFFF"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource PrimaryFont}">
                    Tekan Escape untuk keluar
                </TextBlock>

                <Button Grid.Column="1"
                        Style="{StaticResource AtmSecondaryButtonStyle}"
                        FontSize="13" Padding="16,8"
                        Click="OnExitClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Keluarkan Kartu" VerticalAlignment="Center" />
                        <Border Background="#33FFFFFF" CornerRadius="4"
                                Padding="6,2" Margin="8,0,0,0">
                            <TextBlock Text="Esc" FontSize="10"
                                       Foreground="#AAFFFFFF"
                                       FontFamily="{StaticResource MonoFont}" />
                        </Border>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
