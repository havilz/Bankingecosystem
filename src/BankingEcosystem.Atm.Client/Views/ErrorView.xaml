<Window x:Class="BankingEcosystem.Atm.UI.Views.ErrorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BankingEcosystem.Atm.UI.ViewModels"
        mc:Ignorable="d"
        Title="System Error" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        Topmost="True">
    
    <Window.DataContext>
        <vm:ErrorViewModel/>
    </Window.DataContext>

    <Border BorderBrush="#D32F2F" BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="âš " FontSize="48" Foreground="#D32F2F" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="System Error" FontSize="24" FontWeight="Bold" Foreground="#D32F2F" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" 
                       TextWrapping="Wrap" FontSize="16" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       TextAlignment="Center"/>

            <Button Grid.Row="2" Content="Shutdown System" Command="{Binding CloseCommand}"
                    Width="150" Height="40" Background="#D32F2F" Foreground="White"
                    FontSize="16" FontWeight="Bold" Margin="0,20,0,0"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>
